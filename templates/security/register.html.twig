{% extends 'front/index.html.twig' %}

{% block title %}{{ 'button.register'|trans }}{% endblock %}

{% block content %}
    <section class="pt-5">
        <div class="container pt-3">
            <h1 class="mb-3">{{ 'button.register'|trans }}</h1>
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-12 mb-12">
                                {{ form_row(form.email) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.name) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.firstname) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.plainPassword.first) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.plainPassword.second) }}
                            </div>
                            <div class="col-md-12 mb-3">
                                <div class="checkbox">
                                    <div class="form-check pl-0">
                                        {{ form_widget(form.terms) }}
                                        <div class="invalid-feedback" {% if form_errors(form.terms) %}style="display: block"{% endif %}>
                                            {{ form_errors(form.terms) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 text-center">
                                <button class="btn btn-primary" type="submit"><i class="fas fa-user-plus"></i>{{ 'button.register'|trans }}</button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
