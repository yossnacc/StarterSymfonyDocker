<form method="post" action="{{ path('front_user_delete') }}" onsubmit="return confirm('{{ 'button.confirmDelete'|trans({'item': user.fullName}) }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    {% include '_partials/buttons/delete.html.twig' with {'text':'button.deleteUser', 'class': 'btn-block'} %}
</form>
